<!DOCTYPE html>
<html>
<%= erb :_head %>
<body data-spy="scroll" data-target=".api-docs-sidebar" data-active-menu="api">
  <div class="container">
    <%= erb :_nav %>
    <ul class="nav nav-pills">
      <% DOC_VERSIONS.each do |version| %>
        <li<% if params[:version] == version %> class="active"<% end %>><a class="button" href="/api/<%=version%>/docs"><%=version%></a></li>
      <% end %>
    </ul>

    <div class="row">
      <div class="span3 api-docs-sidebar">
        <ul id="doc-ul" class="nav nav-list api-docs-sidenav" data-spy="affix" data-offset-top="100">
        </ul>
      </div>
      <div class="span9">
        <%= yield %>
      </div>
    </div>

    <hr>

    <%= erb :_footer %>
  </div> <!-- /container -->
  <%= erb :_scripts %>
</body>
</html>